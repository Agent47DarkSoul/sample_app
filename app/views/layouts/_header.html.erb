<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to 'Sample App', root_path, class: "brand" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "About Us", about_path %></li>
					<li><%= link_to "Help", help_path %></li>
					<li><%= link_to "Contact Us", contact_path %></li>
					<% if signed_in? %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<%= current_user.name %>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
							<li><%= link_to('Profile', user_path(current_user), tabindex: -1)%></li>
							<li><%= link_to('Settings', edit_user_path(current_user), tabindex: -1)%></li>
							<li><%= link_to('Sign out', signout_path, method: "delete", tabindex: -1) %></li>
						</ul>
					</li>
					<% else %>
						<li><%= link_to("Sign in", signin_path) %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>